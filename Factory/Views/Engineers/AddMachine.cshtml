@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h2>Add Machine</h2>

<h4>Add a machine this engineer has been assigned to: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)
  
  @Html.Label("Select machine")
  @Html.DropDownList("MachineId")

  <input type="submit" value="Save">
}

<input type="button" class="btn btn-outline-primary" value="Home" onclick="location.href='@Url.Action("Index", "Home")'">
<input type="button" class="btn btn-outline-primary" value="Back to list" onclick="location.href='@Url.Action("Index")'">